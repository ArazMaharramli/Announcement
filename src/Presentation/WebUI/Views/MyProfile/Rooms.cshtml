@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@model List<Application.CQRS.Rooms.Queries.Search.RoomVm>

<div class="d-flex flex-column-fluid">
    <div class="container pt-15">
        <div class="w-100 d-flex justify-content-start mb-5">
            @*<h1 class="font-weight-bolder">@Localizer["LastAnnouncements"]</h1>*@
        </div>
        <div class="row">
            @foreach (var room in Model)
            {
                <div class="col-md-4 col-lg-12 col-xxl-4">
                    <div class="card card-custom gutter-b card-stretch">
                        <a asp-action="Edit" asp-controller="Rooms" asp-route-id="@room.Id" class="card-body d-flex flex-column rounded bg-light justify-content-between  p-2">
                            <div class="text-center rounded mb-7">
                                <img loading="lazy" src="@room.MediaUrl" alt="" class="w-100 h-300px img-fluid rounded" style="object-fit:cover;">
                            </div>
                            <div class=" d-flex align-items-center me-2 justify-content-between">
                                <div>
                                    <h4 class="font-size-h5 text-dark-75 font-weight-bolder">
                                        @room.Title
                                    </h4>
                                    <div class="font-size-h6 text-muted font-weight-bolder">
                                        @room.Status
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>