@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@inject Application.Common.Models.ConfigModels.TenantInfo tenant

@section Meta{
    <meta name="robots" content="noindex" />

    <title>@tenant.StaticPages.RoomCreated.SEO.Title | @tenant.Domain</title>
    <!-- meaningless code-->
    <meta name="keywords" content="@tenant.StaticPages.RoomUpdated.SEO.Keywords" />
    <meta name="description" content="@tenant.StaticPages.RoomUpdated.SEO.Description" />
}

@section Headers{

    @Html.Raw(tenant.StaticPages.RoomUpdated.Headers is null ? "" :
    string.Join("", tenant.StaticPages.RoomUpdated.Headers))
}

<div class="d-flex flex-column-fluid bgi-no-repeat align-items-center py-md-15" style="background-color: #1B283F; background-position: calc(100% + 0.5rem) bottom; background-size: 50% auto; background-image: url(/assets/media/svg/humans/custom-10.svg)">
    <div class="container">
        <h2 class="text-white pb-5 font-weight-bolder">@Localizer["Announcement updated"]</h2>

        <p class="text-muted pb-5 font-size-h5">
            @Localizer["After approval of admins your announcement will be published. Usually it takes 1-2 days."]<br />
            @Localizer["In any case, you will be notified via email."]
        </p>

        <a href="#" class="btn btn-danger font-weight-bold py-2 px-6">@Localizer["Ok"]</a>
    </div>
</div>