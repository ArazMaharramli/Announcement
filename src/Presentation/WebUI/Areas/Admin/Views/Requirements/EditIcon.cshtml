@model WebUI.Areas.Admin.ViewModels.Requirements.EditRequirementIconViewModel

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["EditRequirementIconTitle"];
}
@section Scripts{
    <script>
        autosize($('#autosizeicontextarea'));
    </script>
}
<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title font-size-h1 text-dark font-weight-bolder mr-3 mb-0">
            @Model.Name
        </h3>
        
    </div>
    <!--begin::Form-->

    <form class="form" method="post">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Icon"></label>
                <textarea id='autosizeicontextarea' asp-for="Icon" class="form-control"></textarea>
                <span class="form-text text-danger" asp-validation-for="Icon"></span>
            </div>
            <input type="hidden" asp-for="Id" />
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary mr-2">@Localizer["Submit"]</button>
            <button type="reset" class="btn btn-secondary">@Localizer["Cancel"]</button>
        </div>
    </form>
    <!--end::Form-->
</div>
