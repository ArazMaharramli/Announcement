@model Application.CQRS.Categories.Commands.AddOrUpdateTranslation.AddOrUpdateCategoryTranslationCommand

@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = @Localizer["EditCategoryTranslationTitle"];
}

<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title font-size-h1 text-dark font-weight-bolder mr-3 mb-0">
            @Model.Name / @Model.LangCode
        </h3>

    </div>
    <!--begin::Form-->

    <form class="form" method="post">
        <div class="card-body">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span class="form-text text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetaTitle"></label>
                <input asp-for="MetaTitle" class="form-control" />
                <span class="form-text text-danger" asp-validation-for="MetaTitle"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetaKeywords"></label>
                <input asp-for="MetaKeywords" class="form-control" />
                <span class="form-text text-danger" asp-validation-for="MetaKeywords"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetaDescription"></label>
                <input asp-for="MetaDescription" class="form-control" />
                <span class="form-text text-danger" asp-validation-for="MetaDescription"></span>
            </div>

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="LangCode"></input>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary mr-2">@Localizer["Submit"]</button>
            <button type="reset" class="btn btn-secondary">@Localizer["Cancel"]</button>
        </div>
    </form>
    <!--end::Form-->
</div>
